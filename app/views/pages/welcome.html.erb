<% if user_signed_in? %>
  <div class="container">
    <nav class="navbar navbar-default" style="margin-top: 1%">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">
            Troop 15
          </a>
        </div>
        <div class="navbar-right">
          <div>
        </div>
      </div>
    </nav>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3" style="margin-top: 8%; margin-bottom: 10%">
        <div class="panel panel-primary">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <h2 class="text-center">Troop 15: Short Hills, NJ</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="panel-body">
                <div class="panel panel-primary devise-bs">
                  <div class="panel-heading">
                    <h4><%= t('.sign_in', :default => "Sign in") %></h4>
                  </div>
                  <div class="panel-body">
                  <%= form_for(:user, :url => session_path(:user), :html => {role: "form"}) do |f| %>
                    <div class="form-group">
                      <%= f.label :email %>
                      <%= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password %>
                      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>
                      <% if devise_mapping.rememberable? %>
                        <div class="checkbox">
                          <%= f.label :remember_me do %>
                          <%= f.check_box :remember_me %>
                          <%= t('.remember_me', :default => "Remember me") %>
                      <% end %>
                        </div>
                      <% end %>
                      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
