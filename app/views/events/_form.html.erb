<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      clearBtn: true,
      orientation: "bottom left",
      multidate: true,
      multidateSeparator: " ",
      autoclose: true,
      todayHighlight: true
    });
  });
</script>
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :information %>
    <%= f.text_field :information %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date, :class => 'datepicker' %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.number_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
